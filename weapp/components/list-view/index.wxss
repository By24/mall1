/* components/listView/listView.wxss */

.list-view-box {
    width: 100%;
    height: 100%;
	display: flex;
	flex-direction: column;
}

.list-view-content {
    width: 100%;
    min-height: 100%;
	height: auto;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
}

.list-view-header,
.list-view-footer {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    color: #999;
	background: transparent;
}

.list-view-header {
	margin-top: -80rpx;
}

.refreshingView {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.dropDownImg,
.dropEndImg {
    width: 32rpx;
    height: 32rpx;
    margin-right: 24rpx;
}

.refreshingView_img,
.loadMoreRefresh_img {
    width: 32rpx;
    height: 32rpx;
    margin-right: 24rpx;
    transition: 0.5s;
    transform-origin: 50% 50%;
    animation: loading 1s linear infinite;   
}

@keyframes loading {
    from {
        -webkit-transform: rotate(0deg);
    }

    to {
        -webkit-transform: rotate(360deg);
    }
}

.list-view-footer {
	position: fixed;
	left: 0;
	bottom: 0;
	z-index: 10;
}

.textColor_red {
	color: rgba(255,0,0,0.6);
}

/*空列表*/
.emptyView {
	width: 100%;
	height: 100%;
	box-sizing: border-box;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
    color: #999;
    font-size: 28rpx;
}

.noMoreView {
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
    color: #999;
    font-size: 28rpx;
}